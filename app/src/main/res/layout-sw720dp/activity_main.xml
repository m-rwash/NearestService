<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/grid"
    android:rowCount="4"
    android:columnCount="6"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:id="@+id/textView"
        android:layout_row="1"
        android:layout_weight="0.42"
        android:background="#05dfff"
        android:capitalize="none"
        android:textAlignment="center"
        android:textColor="#3c07ff"
        android:singleLine="true"
        android:textSize="30dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_weight="0.55">

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:id="@+id/cafe"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Cafe"
            android:drawableTop="@drawable/ic_local_cafe_black_48dp"
            android:onClick="onClick"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Restaurant"
            android:id="@+id/restaurant"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_dining_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Park"
            android:id="@+id/park"
            android:layout_row="2"
            android:layout_column="0"
            android:drawableTop="@drawable/ic_local_florist_black_48dp"
            android:onClick="onClick"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Movie Theater"
            android:id="@+id/movie"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_movies_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Book Store"
            android:id="@+id/bookStore"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_library_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="ATM"
            android:id="@+id/atm"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_atm_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Police"
            android:id="@+id/police"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_add_alert_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Hospital"
            android:id="@+id/hospital"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_hospital_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:text="Bar"
            android:id="@+id/bar"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onClick"
            android:drawableTop="@drawable/ic_local_bar_black_48dp"
            android:background="#ffffff"
            android:shadowColor="#ffffff"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

    </GridLayout>

</LinearLayout>
